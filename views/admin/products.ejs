<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="pagesNum"><%=pages%> <p class="pageNumber"><%=pageNumber%></p><p class="linkpath"><%=linkPath%></p></div>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="/images/<%= product.imgUrl %>" alt="<%= product.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= product.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%=product.id %>" class="btn">Edit</a>
                                    <div class="inputs">
                                        <input type="hidden" name="productId" value="<%= product.id%>" />
                                        <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
                                        <br />
                                        <a href="/admin/delete/<%=product.id %>" class="btn deleteProduct" >Delete</a>
                        
                                    </div>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <section class="pagination"></section>  
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <!-- <script src="/js/admin.js"></script> -->
            <%- include('../includes/end.ejs') %>